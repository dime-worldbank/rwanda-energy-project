##Village level----

village_regress <- read_xlsx(path = file.path(data_path, "rwa_regress_villagelevel.xlsx"))

balance_village <- village_regress %>% 
  filter(year == 2011) %>% 
  filter(
    status == c("elec12_14", "elec15_17", "never_elec")
  )
  filter(!district %in% c("Ngororero", "Nyabihu", "Nyamasheke", "Rubavu") ) %>% 
  select(
    village_id, status, usage, num_establishment, total_employee, registered_rra
  ) %>% 
  mutate(
    village_id = as.numeric(village_id)
  ) %>% 
 

write_dta(balance_village, path = file.path(data_path, "balance_table_village.dta"))


## Cell level----

cell_regress <- read_xlsx(path = file.path(data_path, "rwa_regress_wtax.xlsx"))

balance_cell <- cell_regress %>% 
  filter(year == 2011) %>% 
  filter(
    status == c("elec12_14", "elec15_17", "never_elec")
  ) %>% 
  filter(!district %in% c("Ngororero", "Nyabihu", "Nyamasheke", "Rubavu") ) %>% 
  select(
    cell_id, status, usage, num_establishment, total_employee
  ) %>% 
  mutate(
    cell_id = as.numeric(cell_id)
  ) 

write_dta(balance_cell, path = file.path(data_path, "balance_table_cell.dta"))
































