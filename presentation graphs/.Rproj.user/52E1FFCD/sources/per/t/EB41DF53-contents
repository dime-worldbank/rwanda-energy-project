  mutate(
    significance = case_when(
      p.value < 0.001 ~ "***",
      p.value < 0.01 ~ "**",
      p.value < 0.05 ~ "*",
      TRUE ~ ""
    ) # Combine estimate with stars
  ) %>% 
  mutate(
    significance = ifelse(is.na(term), "", significance),
    label = paste0(round(estimate, 2), significance) 
  )


