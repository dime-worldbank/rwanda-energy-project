  summarise(
    n = n()
  ) %>% 
  arrange(desc(n)) %>% 
  pivot_wider(
    names_from = formal_savings_label,
    values_from = n) %>% 
  mutate(
    Var = "Formal Savings"
  ) %>% 
  select(Var, everything()) %>% 
  mutate(
    percent = paste0(round(Yes/(No+Yes), 4)*100, "%")
  )

informal <- savings %>% 
