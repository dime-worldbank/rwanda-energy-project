business <- hfc_constr %>% 
  select(
    hh_id, starts_with("D")
  )

business_own <- business %>% 
  group_by(
    D1_1_label
  ) %>% 
  summarise(
    n = n()
  ) %>% 
  arrange(desc(n)) %>% 
  rename(
    `None farming business` = D1_1_label
  ) %>% 
  mutate(percentage = paste(round((n / sum(n)),4) * 100, "%")) 
  

descriptives_sheet %>% 
  sheet_write(
    data = business_own, 
    sheet = "business_own"
  )
  

business_type <- business %>% 
  group_by(
   D2_2_label
  ) %>% 
  summarise(
    n = n()
  ) %>% 
  arrange(desc(n)) %>% 
  filter(!is.na(D2_2_label)) %>% 
  rename(
    `Type of business` = D2_2_label
  ) %>% 
    mutate(percentage = paste(round((n / sum(n)),4) * 100, "%")) 



descriptives_sheet %>% 
  sheet_write(data = business_type, sheet = "business_type")


